nextflow_pipeline {
    name "primary_full_small_only_input"
    script "main.nf"

    test("primary_full_small_only_input") {
        tag "primary_full_small_only_input"
        tag "test_full_small"
        when {
            params {
                outdir = "$outputDir"
                only_input = true
            }
        }

        then {
            assert workflow.success

            assert new File("$outputDir/01_prealign/umitools/sample_1_R1.merged.fastq.gz").exists()
            assert new File("$outputDir/01_prealign/umitools/sample_2_R1.merged.fastq.gz").exists()
        }
    }
}
