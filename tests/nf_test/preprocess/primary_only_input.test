nextflow_pipeline {
    name "preprocess_primary_branch_only_input"
    script "main.nf"

    test("primary_branch") {
        tag "primary_branch"
        tag "test_full_small"
        when {
            params {
                outdir = "$outputDir"
                only_input = true
            }
        }

        then {
            assert workflow.success

            assert new File("$outputDir/01_prealign/sample_1_R1.merged.fastq.gz").exists()
            assert new File("$outputDir/01_prealign/sample_2_R1.merged.fastq.gz").exists()
        }
    }
}
